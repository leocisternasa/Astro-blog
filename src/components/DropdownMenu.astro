---
import { NavMenuInfo } from "../components/Header.astro"


const { title, subMenuList } = Astro.props
---

    
    <div class="relative block group">
      <button class="bg-slate-300 text-almost-black p-4 text-base border-none rounded cursor-pointer hover:bg-slate-400">{title}</button>
        <div class="hidden absolute bg-slate-200 rounded min-w-[160px] shadow-slate-50 z-10 group-hover:block">
          <div>
            { subMenuList.map(menuItem => (
                <a href={menuItem.link} class="text-black pt-2 pb-2 pl-4 pr-4 block">{menuItem.title}</a>
            ))}  
            
          </div>   
        </div>
    </div>

  